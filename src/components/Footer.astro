let message = '';
let submitted = false;

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  message = formData.get("message")?.toString() || '';
  if (message) {
    // Simulate form submission (replace with actual API call)
    console.log('Submitting message:', message);
    submitted = true;
  }
