---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;

// إنشاء slug من العنوان (استبدال المسافات بشرطات)
const slug = title.toLowerCase().replace(/\s+/g, '-');
---

<div 
  class="flex flex-col bg-gray-900 rounded-lg shadow-md p-4 h-full cursor-pointer transition-all duration-300 hover:shadow-lg hover:bg-gray-800 hover:scale-[0.98] text-center"
  onclick={`window.location.href='/problem/${slug}'`}
>
  <!-- Image -->
  <img 
    src={image} 
    alt={title} 
    class="w-full h-48 object-cover mb-4 rounded-lg" 
  />

  <!-- Title -->
  <h3 class="text-xl md:text-2xl font-bold mb-2 text-center tracking-wide">
    {title}
  </h3>



  <!-- Description -->
  <p class="text-gray-300 text-base md:text-lg leading-relaxed mb-4 min-h-[120px]">
    {description}
  </p>
</div>

<script is:inline>
</script>