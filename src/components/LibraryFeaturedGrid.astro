---
const featuredItems = [
  {
    imageSrc: "/egypt-map.png",
    altText: "Desert ground rocks",
    title: "Desert ground rocks",
    author: "Enrico Tannehill"
  },
  {
    imageSrc: "/egypt-map.png",
    altText: "Rugged stone texture",
    title: "Rugged stone texture",
    author: "Alexandra Stonecraft"
  },
  {
    imageSrc: "/egypt-map.png",
    altText: "Mountain rock face",
    title: "Mountain rock face",
    author: "John Mountain"
  }
];
---

<section class="py-4">
  <div class="container mx-auto px-4">
    <h2 class="text-xl font-bold text-white mb-4">Featured</h2>
    <p class="text-white text-opacity-75 mb-8">Explore our featured recommendations</p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {featuredItems.map(item => (
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-md">
          <img
            src={item.imageSrc}
            alt={item.altText}
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-lg font-bold text-white mb-2">{item.title}</h3>
            <p class="text-white text-opacity-75 text-sm">{item.author}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .container {
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  @media (max-width: 767px) {
    .grid {
      grid-template-columns: 1fr;
    }

    .grid > div {
      width: 100%;
      max-width: 100%;
    }

    .h-48 {
      height: 10rem; /* 160px */
    }

    h2 {
      font-size: 1rem; /* 16px */
      margin-bottom: 0.5rem;
    }

    p {
      font-size: 0.75rem; /* 12px */
      margin-bottom: 1rem;
    }

    h3 {
      font-size: 0.875rem; /* 14px */
    }

    .text-sm {
      font-size: 0.625rem; /* 10px */
    }

    .p-4 {
      padding: 0.5rem;
    }

    .px-4 {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }

    .py-4 {
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
    }

    .gap-4 {
      gap: 0.5rem;
    }
  }
</style>