---
import { getCollection } from 'astro:content';

const { category } = Astro.props; // استقبال الفئة المختارة من الخصائص

// جلب جميع المقالات من الـ Collection
const allArticles = await getCollection('library-topics');

// تصفية المقالات بناءً على الفئة المختارة
const filteredArticles = allArticles.filter(article => {
  // استخراج اسم المجلد الفرعي من المسار
  const folderName = article.id.split('/')[0];
  return folderName === category;
}).map(article => ({
  imageSrc: article.data.image, // مصدر الصورة
  altText: article.data.title, // نص البديل للصورة
  title: article.data.title, // عنوان المقال
  author: "Unknown", // المؤلف، يمكن إضافة حقل author في الـ Frontmatter
  slug: `/library/${category}/${article.id.split('/')[1].replace('.md', '')}` // إنشاء الـ Slug
}));
---

<section class="py-4">
  <div class="container mx-auto px-4">
    <h2 class="text-xl font-bold text-white mb-4">Featured</h2>
    <p class="text-white text-opacity-75 mb-8">Explore our featured recommendations</p>
    
    <!-- Grid for displaying articles -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {filteredArticles.length > 0 ? (
        // Loop through filtered articles and display them
        filteredArticles.map(item => (
          <a href={item.slug} class="block cursor-pointer">
            <div class="bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
              <img
                src={item.imageSrc}
                alt={item.altText}
                class="w-full h-48 object-cover"
              />
              <div class="p-4">
                <h3 class="text-lg font-bold text-white mb-2">{item.title}</h3>
                <p class="text-white text-opacity-75 text-sm">{item.author}</p>
              </div>
            </div>
          </a>
        ))
      ) : (
        // Show message when no articles are found
        <p class="text-white text-opacity-75">No articles found for this category.</p>
      )}
    </div>
  </div>
</section>

<style>
  /* تحسينات التصميم للصفحة */
  .container {
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  /* تحسين العرض للأجهزة المحمولة */
  @media (max-width: 767px) {
    .grid {
      grid-template-columns: 1fr;
    }

    .grid > div {
      width: 100%;
      max-width: 100%;
    }

    /* تحديد ارتفاع الصورة في الجيد */
    .h-48 {
      height: 10rem; /* 160px */
    }

    /* تقليل حجم الخط في الشاشات الصغيرة */
    h2 {
      font-size: 1rem; /* 16px */
      margin-bottom: 0.5rem;
    }

    p {
      font-size: 0.75rem; /* 12px */
      margin-bottom: 1rem;
    }

    h3 {
      font-size: 0.875rem; /* 14px */
    }

    .text-sm {
      font-size: 0.625rem; /* 10px */
    }

    /* تقليل padding والمسافات بين العناصر في الشاشات الصغيرة */
    .p-4 {
      padding: 0.5rem;
    }

    .px-4 {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }

    .py-4 {
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
    }

    .gap-4 {
      gap: 0.5rem;
    }
  }
</style>
