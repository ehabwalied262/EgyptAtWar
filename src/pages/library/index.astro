---
import NavBar from "@/components/NavBar.astro";
import LibraryHeroSection from "@/components/LibraryHeroSection.astro";
import LibraryFilterBar from "@/components/LibraryFilterBar.astro";
import LibraryFeaturedGrid from "@/components/LibraryFeaturedGrid.astro";

// القيمة الافتراضية للفئة المختارة
let activeCategory = 'zionism';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Library</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  </head>

  <body class="bg-darkBackground text-white min-h-screen mt-16">
    <!-- NavBar -->
    <NavBar />

    <!-- Page Container -->
    <div class="flex min-h-screen flex-col">
      <div class="flex-1 flex flex-col w-full max-w-full overflow-x-hidden">
        <!-- Hero Section -->
        <div class="w-full">
          <LibraryHeroSection />
        </div>

        <!-- Filter Bar -->
        <div class="w-full">
          <LibraryFilterBar onFilterChange={(category) => activeCategory = category} />
        </div>

        <!-- Featured Grid -->
        <div class="w-full flex-1">
          <LibraryFeaturedGrid category={activeCategory} client:load />
        </div>
      </div>
    </div>

    <!-- Script لإدارة الحالة -->
    <script>
      // استمع لتغييرات الفئة من LibraryFilterBar
      window.addEventListener('filterChange', (event) => {
        const category = event.detail.category;
        // قم بتحديث الفئة المختارة في LibraryFeaturedGrid
        const featuredGrid = document.querySelector('astro-library-featured-grid');
        if (featuredGrid) {
          featuredGrid.setAttribute('category', category);
        }
      });
    </script>
  </body>
</html>

<style>
  /* منع التمرير الأفقي على مستوى الصفحة */
  html, body {
    overflow-x: hidden;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  /* تحسين الـ Responsiveness للشاشات الصغيرة */
  @media (max-width: 767px) {
    body {
      margin-top: 3rem; /* 48px، تقليل المسافة العلوية للـ NavBar */
    }

    .flex-col {
      width: 100%;
      max-width: 100%;
      padding: 0 0.5rem; /* 8px padding جانبي */
    }

    /* ضبط العناصر لتأخذ العرض الكامل */
    .w-full {
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
    }
  }
</style>