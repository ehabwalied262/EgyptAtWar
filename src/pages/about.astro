---
import NavBar from "@/components/NavBar.astro";
import { getEntry } from 'astro:content';

// جلب المحتوى من src/content/about/about.md
const entry = await getEntry('about', 'about');
const sections = entry ? entry.data.sections : [];
---

<html lang="ar">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <title>About us</title>
  </head>
  <body class="bg-darkBackground text-white min-h-screen mt-16">
    <!-- NavBar -->
    <NavBar />

    <div class="px-6 py-12 max-w-4xl mx-auto text-right">
      {sections.length > 0 ? (
        sections.map((section) => (
          <section class="mb-10">
            <h2 class="text-3xl font-bold mb-4 text-yellow-400">{section.title}</h2>
            <p class="text-lg leading-relaxed">{section.content}</p>
          </section>
        ))
      ) : (
        <h1>Not Found</h1>
      )}
    </div>
  </body>
</html>